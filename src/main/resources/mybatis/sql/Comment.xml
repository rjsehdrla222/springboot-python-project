<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTO Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.induk.python.pythoninweb.repository.CommentRepository">
    <select id="commentList" parameterType="com.induk.python.pythoninweb.domain.Comment" resultType="com.induk.python.pythoninweb.domain.Comment">
        SELECT * FROM comment;
    </select>

    <select id="commentDetail" parameterType="Long" resultType="com.induk.python.pythoninweb.domain.Comment">
        SELECT * FROM comment WHERE id = #{id};
    </select>

    <insert id="commentInsert" parameterType="com.induk.python.pythoninweb.domain.Comment">
        INSERT INTO comment (title, name, comment, login_Id, view_cnt)
        VALUES (#{title}, #{name}, #{comment}, #{login_id}, 0)
    </insert>

</mapper>